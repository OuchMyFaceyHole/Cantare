@model DateTime
<div id="PlayingArea" class="container-fluid text-center" style="max-width: 45rem">
    <div class="row">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <h4 id="SongDate" class="text-nowrap border border-2 rounded" style="max-width:8rem; padding:0; margin:0.5rem">@Model.ToShortDateString()</h4>
            </div>
            <div class="row justify-content-center" style="margin: 0.5rem">
                <button class="btn btn-warning" id="PlayButton" style="max-width:8rem">Play</button>
            </div>
            <div class="row progress" style="margin: 0.5rem">
                <div id="PlayProgress" class="progress-bar progress-bar-striped progress-bar-animated"
                     style="width: 0%">
                </div>
            </div>
            <div class="row justify-content-center" style="margin: 0.5rem">
                <div class="col" style="flex: 0.25 0 0%">
                    <button class="btn btn-outline-secondary" id="SkipButton" style="max-width:5rem" disabled>Skip</button>
                </div>
                <div class="col" style="flex: 0.25 0 0%">
                    <button class="btn btn-outline-secondary" id="ShareButton" style="max-width:10rem" disabled>Share Results</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="GuessContainer" class="container-fluid" style="padding: 0">
            <div class="row rounded" style="margin: 0.5rem">
                <div class="col d-flex justify-content-center align-items-center" style="padding: 0">
                    <p class="text-md-center fw-bold fs-5 align-middle" hidden style="margin: 1rem"></p>
                    <div id="SongInputGroup" class="input-group">
                        <input type="text" id="SongInput" class="form-control AutoCompleteInput" />
                        <button type="button" class="btn btn-secondary" id="SubmitButton">Submit</button>
                    </div>
                </div>
            </div>
            <div class="row rounded" style="background-color: dimgrey; margin: 0.5rem">
                <div class="col d-flex justify-content-center align-items-center" style="padding: 0">
                    <p class="text-md-center fw-bold fs-5 align-middle" style="margin: 1rem"></p>
                </div>
            </div>
            <div class="row rounded" style="background-color: dimgrey; margin: 0.5rem">
                <div class="col d-flex justify-content-center align-items-center" style="padding: 0">
                    <p class="text-md-center fw-bold fs-5 align-middle" style="margin: 1rem"></p>
                </div>
            </div>
            <div class="row rounded" style="background-color: dimgrey; margin: 0.5rem">
                <div class="col d-flex justify-content-center align-items-center" style="padding: 0">
                    <p class="text-md-center fw-bold fs-5 align-middle" style="margin: 1rem"></p>
                </div>
            </div>
            <div class="row rounded" style="background-color: dimgrey; margin: 0.5rem">
                <div class="col d-flex justify-content-center align-items-center" style="padding: 0">
                    <p class="text-md-center fw-bold fs-5 align-middle" style="margin: 1rem"></p>
                </div>
            </div>
            <div class="row rounded" style="background-color: dimgrey; margin: 0.5rem">
                <div class="col d-flex justify-content-center align-items-center" style="padding: 0">
                    <p class="text-md-center fw-bold fs-5 align-middle" style="margin: 1rem"></p>
                </div>
            </div>
            <div class="row rounded" style="background-color: dimgrey; margin: 0.5rem" hidden>
                <div class="col d-flex justify-content-center align-items-center" style="padding: 0">
                    <p class="text-md-center fw-bold fs-5 align-middle" style="margin: 1rem"></p>
                </div>
            </div>
        </div>
    </div>
</div>